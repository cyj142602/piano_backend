CREATE TABLE "PIANO_BACKEND"."PIANO_USER"
(
"ID" VARCHAR2(50) NOT NULL,
"OPEN_ID" VARCHAR2(50) NOT NULL,
"NICK_NAME" VARCHAR2(50),
"GENDER" INTEGER,
"PHONE" VARCHAR2(50),
"PERMISSION" INTEGER,
"CREATE_TIME" DATETIME(6),
"UPDATE_TIME" DATETIME(6),
"DEL_FLAG" INTEGER DEFAULT 0 NOT NULL,
CLUSTER PRIMARY KEY("ID")) STORAGE(ON "MAIN", CLUSTERBTR) ;

COMMENT ON TABLE "PIANO_BACKEND"."PIANO_USER" IS '用户表';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_USER"."ID" IS '主键';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_USER"."OPEN_ID" IS 'openID';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_USER"."NICK_NAME" IS '昵称';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_USER"."GENDER" IS '性别，1男2女';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_USER"."PERMISSION" IS '权限，1访客2正式用户';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_USER"."PHONE" IS '手机';
CREATE TABLE "PIANO_BACKEND"."PIANO_STUDENT"
(
"ID" VARCHAR2(50) NOT NULL,
"PIANO_USER_ID" VARCHAR2(50) NOT NULL,
"STUDENT_NAME" VARCHAR2(50) NOT NULL,
"GENDER" INTEGER NOT NULL,
"AGE" INTEGER,
"PHOTO" VARCHAR2(50),
"CREATE_TIME" DATETIME(6),
"UPDATE_TIME" DATETIME(6),
"DEL_FLAG" INTEGER DEFAULT 0 NOT NULL,
"NICK_NAME" VARCHAR2(50),
"BIRTHDAY" DATETIME(6),
"CALENDAR" INTEGER,
CLUSTER PRIMARY KEY("ID")) STORAGE(ON "MAIN", CLUSTERBTR) ;

COMMENT ON TABLE "PIANO_BACKEND"."PIANO_STUDENT" IS '学生表';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_STUDENT"."PHOTO" IS '照片';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_STUDENT"."GENDER" IS '性别1男2女';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_STUDENT"."DEL_FLAG" IS '删除标志1是0否';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_STUDENT"."NICK_NAME" IS '小名';

CREATE TABLE "PIANO_BACKEND"."PIANO_FILE"
(
"ID" VARCHAR2(50) NOT NULL,
"FILE_NAME" VARCHAR2(50),
"CREATE_TIME" DATETIME(6),
"UPDATE_TIME" DATETIME(6),
"DEL_FLAG" VARCHAR2(50),
"FILE_TYPE" INTEGER,
"STUDENT_ID" VARCHAR2(50),
CLUSTER PRIMARY KEY("ID")) STORAGE(ON "MAIN", CLUSTERBTR) ;

COMMENT ON TABLE "PIANO_BACKEND"."PIANO_FILE" IS '文件表';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_FILE"."FILE_NAME" IS '文件名';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_FILE"."FILE_TYPE" IS '文件类型，1照片2视频';
COMMENT ON COLUMN "PIANO_BACKEND"."PIANO_FILE"."STUDENT_ID" IS '关联学生ID';
